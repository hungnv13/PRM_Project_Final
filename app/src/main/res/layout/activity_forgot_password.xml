<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F5F7"
    tools:context=".ForgotPasswordActivity">

    <!-- Top Bar with Close Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            android:padding="12dp" />

    </RelativeLayout>

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="194dp"
            android:layout_height="135dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:contentDescription="Clothing Online Logo"
            android:src="@drawable/clothing_logo" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/forgot_password_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/highlands_brown"
            android:gravity="center"
            android:layout_marginBottom="60dp" />

        <!-- Email/Phone Input -->
        <EditText
            android:id="@+id/et_email_phone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_background_border"
            android:hint="@string/email_phone_hint"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_gray"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_description"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="40dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/continue_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_background_disabled"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>