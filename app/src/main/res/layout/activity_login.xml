<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F5F7"
    android:padding="24dp"
    tools:context=".LoginActivity">

<!--
    &lt;!&ndash; Status Bar Spacer &ndash;&gt;
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />
-->

    <!-- Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/clothing_logo"
            android:contentDescription="Clothing Online Logo"
            android:layout_marginBottom="40dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/highlands_brown"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

    </LinearLayout>

    <!-- Login Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Email/Phone Input -->
        <EditText
            android:id="@+id/et_email_phone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_background"
            android:hint="@string/email_phone_hint"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_gray"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Password Input Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/password_hint"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="48dp" />

            <ImageButton
                android:id="@+id/btn_toggle_password"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="Toggle Password Visibility"
                android:layout_marginEnd="4dp" />

        </RelativeLayout>

        <!-- Remember Me and Forgot Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <CheckBox
                android:id="@+id/cb_remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remember_me"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_forgot_password"
                android:height="48dp"
                android:textColor="@color/highlands_red"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textSize="14sp"
                />

        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/login_btn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:layout_marginBottom="12dp" />

    </LinearLayout>

    <!-- Or Divider -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/or_text"
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:layout_marginBottom="12dp" />

    <!-- Social Login Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <!-- Apple Login -->
        <ImageButton
            android:id="@+id/btn_apple"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/social_button_background"
            android:src="@drawable/ic_apple"
            android:layout_marginEnd="20dp"
            android:contentDescription="Apple Login" />

        <!-- Google Login -->
        <ImageButton
            android:id="@+id/btn_google"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/social_button_background"
            android:src="@drawable/ic_google"
            android:layout_marginEnd="20dp"
            android:contentDescription="Google Login" />

        <!-- Facebook Login -->
        <ImageButton
            android:id="@+id/btn_facebook"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/social_button_background"
            android:src="@drawable/ic_facebook"
            android:contentDescription="Facebook Login" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Create Account -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_customer"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="@string/create_account"
            android:textColor="@color/highlands_red"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>